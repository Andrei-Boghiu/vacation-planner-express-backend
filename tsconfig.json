{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "typeRoots": ["./src/types", "./node_modules/@types"],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
